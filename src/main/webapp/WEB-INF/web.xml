<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">

  <servlet>
        <servlet-name>SoftwareSystemsEngineeringProject</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer
        </servlet-class>
        <welcome-file-list>
        <welcome-file>index.html</welcome-file> 
    	</welcome-file-list>
        <init-param>
             <param-name>Reservations</param-name>
             <param-value>main.java.reservations</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Reservations</servlet-name>
        <url-pattern>SoftwareSystemsEngineeringProject/reservations/*</url-pattern>
    </servlet-mapping>

</web-app>